{
  "description": "Detects shortcut-taking phrases and blocks tool execution with step-by-step guidance",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-efficiency.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
